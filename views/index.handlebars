<ul class="list-group">
  {{#each burgs }}
    {{#if this.devoured }}
      <li class="list-group-item"><a href='/index/' class="btn btn-light btn-sm">Devoured!</a> &nbsp;&nbsp; {{ this.burger_name }}</li>
    {{else}}
      <li class="list-group-item"><a href='/index/{{this.id}}' class="btn btn-light btn-sm">Eat!</a> &nbsp;&nbsp; {{ this.burger_name }} created on {{ date }}</li>
    {{/if}}
  {{/each}}
</ul>